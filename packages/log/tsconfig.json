{
  "compilerOptions": {
    "target": "ES2020",
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node", // Node.js 모듈 해석 방식
    "allowSyntheticDefaultImports": true, // default import 호환성
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true, // JS 소스맵 생성
    "noEmitOnError": true, // 타입 에러시 컴파일 중단
    "removeComments": true, // 주석 제거로 번들 크기 감소
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}